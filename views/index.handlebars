<header>
    <div class="banner">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="logo">
                <h1 class="pl-4 pt-4" style="z-index: 5"> Pet Park</h1>
                <h1 class="pl-4 pt-4" style="color:#F5A623; position:absolute; top: 4px; left: 8px;"> Pet Park
                </h1>
            </div>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01"
                aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="justify-content-end collapse navbar-collapse" id="navbarTogglerDemo01">
                <div class="pr-4">
                    <button class="btn btn-danger my-2 my-sm-0 mx-2" id="createPet">Create A Pet</button>
                    <button class="btn btn-warning my-2 my-sm-0 mx-2">Log In</button>
                    <button class="btn btn-warning my-2 my-sm-0 mx-2">Sign Up</button>
                </div>
            </div>
        </nav>
    </div>
</header>

<div class="container-fluid mt-5">
    <div class="cards">
        {{#each this}}
        <article data-id={{this.id}}>
            <img src={{this.img}}>
        </article>
        {{/each}}
    </div>
</div>

{{!-- modal for pet info --}}
<div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true"
    id="petStatus">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content p-2">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalCenterTitle"><b>Bearer</b> | Owner: Jack</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row align-items-center justify-content-around">
                    <div class="col-md-2 p-0">
                    </div>
                    <div class="col-md-7 p-0">
                        <div class="" style="height: 30px;">
                            <h5 style="position:absolute; bottom:0%; left:2%; font-size:12pt; color
                                :gray;"><i class="far fa-frown"></i></h5>
                            <h5 style="position:absolute; bottom:0%; right:2%; font-size:12pt; color
                                :gray;"><i class="far fa-smile"></i></h5>
                        </div>
                    </div>
                    <div class="col-md-2 p-0">
                    </div>
                </div>
                <div class="row align-items-center justify-content-around">
                    <div class="col-md-2 p-0">
                        <h5 class="align-self-end py-0 my-0 text-right">H.P.</h5>
                    </div>
                    <div class="col-md-7 p-0">
                        <div class="progress" style="height: 30px;">
                            <div id="hpBar" class="progress-bar" role="progressbar" style="width: 33%;">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2 p-0">
                        <button class="btn btn-danger py-0 action" style="width:70px; height: 30px;">Kill</button>
                    </div>
                </div>

                <div class="row align-items-center justify-content-around my-2">
                    <div class="col-md-2 p-0">
                        <h5 class="align-self-end py-0 my-0 text-right">Hungry</h5>
                    </div>
                    <div class="col-md-7 p-0">
                        <div class="progress" style="height: 30px;">
                            <div id="hungryBar" class="progress-bar progress-bar-striped bg-success" role="progressbar"
                                style="width: 80%;"></div>
                        </div>
                    </div>
                    <div class="col-md-2 p-0">
                        <button class="btn btn-warning py-0 action" style="width:70px; height: 30px;">Feed</button>
                    </div>
                </div>

                <div class="row align-items-center justify-content-around my-2">
                    <div class="col-md-2 p-0">
                        <h5 class="align-self-end py-0 my-0 text-right">Sleepy</h5>
                    </div>
                    <div class="col-md-7 p-0">
                        <div class="progress" style="height: 30px;">
                            <div id="sleepyBar" class="progress-bar progress-bar-striped bg-success" role="progressbar"
                                style="width: 40%;"></div>
                        </div>
                    </div>
                    <div class="col-md-2 p-0">
                        <button class="btn btn-warning py-0 action" style="width:70px; height: 30px;">Sleep</button>
                    </div>
                </div>

                <div class="row align-items-center justify-content-around my-2">
                    <div class="col-md-2 p-0">
                        <h5 class="align-self-end py-0 my-0 text-right">Happy</h5>
                    </div>
                    <div class="col-md-7 p-0">
                        <div class="progress" style="height: 30px;">
                            <div id="happyBar" class="progress-bar progress-bar-striped bg-success" role="progressbar"
                                style="width: 60%;"></div>
                        </div>
                    </div>
                    <div class="col-md-2 p-0">
                        <button class="btn btn-warning py-0 action" style="width:70px; height: 30px;">Play</button>
                    </div>
                </div>
            </div>
            <div class="modal-footer" style="display: block">
                <div class="speech-bubble p-2">
                    <h6 class="bg-light text-dark text-center" id="message"></h6>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal for create new pet-->
<div class="modal fade" id="createPetModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalScrollableTitle">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="cards-createNewPet">

                    </div>
                </div>
            </div>
            <div class="modal-footer" style="justify-content: center">
                <div class="row p-2" style="width:100%">
                    <div class="col-9 text-left p-0 pt-1">
                        <label class="ml-2 mr-1 p-0 pt-2" for="newPetName"><h5>Pet Name</h5></label>
                        <input style="width:80%" id="newPetName"></input>
                    </div>
                    <div class="col-3 text-right">
                        <button type="button " class="btn btn-primary mr-2 mt-1" id="createNewPetBtn">Create A Pet</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</body>